<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".dashboard.fragment_settings">

        <!-- TextView for "Privacy And Policy" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="About"
            android:textColor="@color/orange"
            android:textSize="30sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:text="Created By:"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yashvi Chauhan (IT Sem 6)"
            android:autoLink="email"
            android:paddingLeft="18dp"
            android:paddingBottom="18dp"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:layout_marginTop="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:padding="18dp"
            android:text=" I have worked tirelessly to create an app that exceeds your expectations. I'm proud of what I've accomplished, and I'm excited to continue improving and growing with you. Thank you for your support :)"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"/>






    </LinearLayout>

</ScrollView>






